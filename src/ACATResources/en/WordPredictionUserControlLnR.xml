<?xml version="1.0" ?>
<!DOCTYPE ACAT [
    <!ENTITY usebold "false">
    <!ENTITY buttonFontName "Montserrat SemiBold">
	<!ENTITY buttonFontNameItalic "Montserrat Black">
]>

<ACAT>
    <WidgetAttributes>
		<WidgetAttribute name="Phrase1" label="Thank you" value="Thank you" fontname="&buttonFontName;" fontsize="24"  bold="&usebold;"/>
		<WidgetAttribute name="Phrase2" label="Yes" value="Yes" fontname="&buttonFontName;" fontsize="24"  bold="&usebold;"/>
		<WidgetAttribute name="Phrase3" label="No" value="No" fontname="&buttonFontName;" fontsize="24"  bold="&usebold;"/>
		<WidgetAttribute name="Phrase4" label="Please repeat" value="Please repeat" fontname="&buttonFontName;" fontsize="24"  bold="&usebold;"/>
		<WidgetAttribute name="Phrase5" label="Louder please" value="Louder please" fontname="&buttonFontName;" fontsize="24"  bold="&usebold;"/>
		
        <WidgetAttribute name="PWLItem1" label=" " value="@PWLItem1" fontname="&buttonFontName;" fontsize="24"  bold="&usebold;"/>
        <WidgetAttribute name="PWLItem2" label=" " value="@PWLItem2" fontname="&buttonFontName;" fontsize="24"  bold="&usebold;"/>
        <WidgetAttribute name="PWLItem3" label=" " value="@PWLItem3" fontname="&buttonFontName;" fontsize="24"  bold="&usebold;"/>
        <WidgetAttribute name="PWLItem4" label=" " value="@PWLItem4" fontname="&buttonFontName;" fontsize="24"  bold="&usebold;"/>
        <WidgetAttribute name="PWLItem5" label=" " value="@PWLItem5" fontname="&buttonFontName;" fontsize="24"  bold="&usebold;"/>

		<WidgetAttribute name="AddNewKeyword" label="Add keyword" value="@AddNewKeyword" fontname="&buttonFontNameItalic;" fontsize="24"  bold="true"  italic="true"/>
		<WidgetAttribute name="Keyword1" label=" " value="@Keyword1" fontname="&buttonFontName;" fontsize="24"  bold="&usebold;"/>
		<WidgetAttribute name="Keyword2" label=" " value="@Keyword2" fontname="&buttonFontName;" fontsize="24"  bold="&usebold;"/>
		<WidgetAttribute name="Keyword3" label=" " value="@Keyword3" fontname="&buttonFontName;" fontsize="24"  bold="&usebold;"/>
		<WidgetAttribute name="Keyword4" label=" " value="@Keyword4" fontname="&buttonFontName;" fontsize="24"  bold="&usebold;"/>


	</WidgetAttributes>

    <Layout>

        <Widget class="WordListWidget" name="WordPredictionBox">
            <Widget class="WordListItemWidget" name="PWLItem1" colorScheme="ScannerButton"  />
            <Widget class="WordListItemWidget" name="PWLItem2" colorScheme="ScannerButton"  />
            <Widget class="WordListItemWidget" name="PWLItem3" colorScheme="ScannerButton"  />
            <Widget class="WordListItemWidget" name="PWLItem4" colorScheme="ScannerButton"  />
            <Widget class="WordListItemWidget" name="PWLItem5" colorScheme="ScannerButton"  />
        </Widget>

		<Widget class="WinControlWidget" name="PhrasesBox">
			<Widget class="PhraseListItemWidget" name="Phrase1" colorScheme="PhraseButton"  />
			<Widget class="PhraseListItemWidget" name="Phrase2" colorScheme="PhraseButton"  />
			<Widget class="PhraseListItemWidget" name="Phrase3" colorScheme="PhraseButton"  />
			<Widget class="PhraseListItemWidget" name="Phrase4" colorScheme="PhraseButton"  />
			<Widget class="PhraseListItemWidget" name="Phrase5" colorScheme="PhraseButton"  />
		</Widget>

		<Widget class="KeywordListWidget" name="LnRKeywordsBox">
			<Widget class="ScannerButton" name="AddNewKeyword" colorScheme="KeywordButton"  />
			<Widget class="KeywordListItemWidget" name="Keyword1" colorScheme="KeywordButton"  />
			<Widget class="KeywordListItemWidget" name="Keyword2" colorScheme="KeywordButton"  />
			<Widget class="KeywordListItemWidget" name="Keyword3" colorScheme="KeywordButton"  />
			<Widget class="KeywordListItemWidget" name="Keyword4" colorScheme="KeywordButton"  />
		</Widget>
    </Layout>

    <Animations>
        <Animation name="TopLevelRotationWP"
                   start="true"
                   iterations="1">
			<Widget name="PhrasesBox" onSelect="transition(PhrasesRotation)"/>
			<Widget name="WordPredictionBox" onSelect="transition(WordListRotation)"/>
			<Widget name="LnRKeywordsBox" onSelect="transition(KeywordRotation)"/>
        </Animation>
		
		<Animation name="PhrasesRotation"
                       iterations="@WordPredictionScanIterations"
                       firstPauseTime="@WordPredictionFirstPauseTime"
                       onSelect="actuate(@SelectedWidget); transition(TopLevelRotationWP)"
                       onEnd="transition(TopLevelRotationWP)">
			<Widget name="Phrase1"/>
			<Widget name="Phrase2"/>
			<Widget name="Phrase3"/>
			<Widget name="Phrase4"/>
			<Widget name="Phrase5"/>
		</Animation>
		
        <Animation name="WordListRotation"
                       iterations="@WordPredictionScanIterations"
                       firstPauseTime="@WordPredictionFirstPauseTime"
                       onSelect="actuate(@SelectedWidget); transition(TopLevelRotationWP)"
                       onEnd="transition(TopLevelRotationWP)">
            <Widget name="PWLItem1"/>
            <Widget name="PWLItem2"/>
            <Widget name="PWLItem3"/>
            <Widget name="PWLItem4"/>
            <Widget name="PWLItem5"/>
        </Animation>

		<Animation name="KeywordRotation"
                       iterations="@WordPredictionScanIterations"
                       firstPauseTime="@WordPredictionFirstPauseTime"
                       onSelect="actuate(@SelectedWidget); transition(TopLevelRotationWP)"
                       onEnd="transition(TopLevelRotationWP)">
			<Widget name="Keyword1"/>
			<Widget name="Keyword2"/>
			<Widget name="Keyword3"/>
			<Widget name="Keyword4"/>
		</Animation>
    </Animations>
</ACAT>

