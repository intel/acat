<?xml version="1.0" ?>
<!DOCTYPE ACAT [
  <!ENTITY usebold "false">
  <!ENTITY buttonFontName "Montserrat SemiBold">
]>

<ACAT>
  <WidgetAttributes>
    <WidgetAttribute name="Prompt" label=" " value=" " fontsize="18" fontname="&buttonFontName;" mouseClickActuate="false" bold="&usebold;" roundedCorners="false"/>
    <WidgetAttribute name="ItemText1" label=" " value=" " fontsize="18" fontname="&buttonFontName;"  mouseClickActuate="false" bold="&usebold;" />
    <WidgetAttribute name="ItemText2" label="No" value="@CmdNo" fontsize="18" fontname="&buttonFontName;" bold="&usebold;" extendedAttributes="gazeTiming=longer;"/>
    <WidgetAttribute name="ItemText3" label=" " value=" " fontsize="18" fontname="&buttonFontName;"  mouseClickActuate="false" bold="&usebold;" />
    <WidgetAttribute name="ItemText4" label="Yes" value="@CmdYes" fontsize="18" fontname="&buttonFontName;" bold="&usebold;" extendedAttributes="gazeTiming=longer;"/>
  </WidgetAttributes>

  <Layout>
    <Widget class="RowWidget" name="PromptRow">
      <Widget class="LabelWidget" name="Prompt"   />
    </Widget>
    
    <Widget class="ScannerButton" name="ItemText1"/>
    <Widget class="ScannerButton" name="ItemText2"/>
    <Widget class="ScannerButton" name="ItemText3"/>
    <Widget class="ScannerButton" name="ItemText4"/>
  </Layout>

  <Animations>
    <Animation name="TopLevelRotation"
               start="true"
               onEnter=""
               scanTime="@MenuDialogScanTime"
               iterations="@GridScanIterations">
      <Widget name="ItemText1" />
      <Widget name="ItemText2" onSelect="actuate(ItemText2);transition(TopLevelRotation)"/>
      <Widget name="ItemText3" />
      <Widget name="ItemText4" onSelect="actuate(ItemText4);transition(TopLevelRotation)" />
    </Animation>
  </Animations>
</ACAT>
