<?xml version="1.0" ?>

<ACAT>
  <WidgetAttributes>
    <WidgetAttribute name="ContextMenuTitle" label="" value="" fontsize="20" fontname="Arial" mouseClickActuate="false"/>

    <WidgetAttribute name="ItemIcon1" label=" " value="@leaveSpeak" fontsize="20" fontname="ACAT Icon" mouseClickActuate="true"/>
    <WidgetAttribute name="ItemText1" label="(" value="@leaveSpeak" fontsize="18" fontname="ACAT Icon" mouseClickActuate="true"/>

    <WidgetAttribute name="ItemIcon2" label=" " value="@notused" fontsize="20" fontname="ACAT Icon" mouseClickActuate="true"/>
    <WidgetAttribute name="ItemText2" label=" " value="@notused" fontsize="18" fontname="Arial" mouseClickActuate="true"/>

    <WidgetAttribute name="ItemIcon3" label="F" value="@SpeakNext" fontsize="20" fontname="ACAT Icon" mouseClickActuate="true"/>
    <WidgetAttribute name="ItemText3" label="Next" value="@SpeakNext" fontsize="18" fontname="Arial" mouseClickActuate="true"/>

    <WidgetAttribute name="ItemIcon4" label="F" value="@SpeakNext" fontsize="20" fontname="ACAT Icon" mouseClickActuate="true"/>
    <WidgetAttribute name="ItemText4" label="Next" value="@SpeakNext" fontsize="18" fontname="Arial" mouseClickActuate="true"/>

    <WidgetAttribute name="ItemIcon5" label="F" value="@SpeakNext" fontsize="20" fontname="ACAT Icon" mouseClickActuate="true"/>
    <WidgetAttribute name="ItemText5" label="Next" value="@SpeakNext" fontsize="18" fontname="Arial" mouseClickActuate="true"/>

    <WidgetAttribute name="ItemIcon6" label=" " value="@notused" fontsize="20" fontname="ACAT Icon" mouseClickActuate="true"/>
    <WidgetAttribute name="ItemText6" label=" " value="@notused" fontsize="18" fontname="Arial" mouseClickActuate="true"/>
  </WidgetAttributes>

  <Layout>
    <Widget class="RowWidget" name="TitleRow">
      <Widget class="ScannerButton" name="ContextMenuTitle" colorScheme="ContextMenuTitle"/>
    </Widget>
      
    <Widget class="RowWidget" name="Row1">
      <Widget class="ContextMenuIcon" name="ItemIcon1" />
      <Widget class="ContextMenuText" name="ItemText1"/>
    </Widget>
      
    <Widget class="RowWidget" name="Row2">
      <Widget class="ContextMenuIcon" name="ItemIcon2"/>
      <Widget class="ContextMenuText" name="ItemText2"/>
    </Widget>
      
    <Widget class="RowWidget" name="Row3">
      <Widget class="ContextMenuIcon" name="ItemIcon3" subclass="Speak" enabled="contextual"/>
      <Widget class="ContextMenuText" name="ItemText3" subclass="Speak" enabled="contextual"/>
    </Widget>
      
    <Widget class="RowWidget" name="Row4">
      <Widget class="ContextMenuIcon" name="ItemIcon4" subclass="Speak" enabled="contextual"/>
      <Widget class="ContextMenuText" name="ItemText4" subclass="Speak" enabled="contextual"/>
    </Widget>
    
    <Widget class="RowWidget" name="Row5">
      <Widget class="ContextMenuIcon" name="ItemIcon5" subclass="Speak" enabled="contextual"/>
      <Widget class="ContextMenuText" name="ItemText5" subclass="Speak" enabled="contextual"/>
    </Widget>
    
    <Widget class="RowWidget" name="Row6">
      <Widget class="ContextMenuIcon" name="ItemIcon6"/>
      <Widget class="ContextMenuText" name="ItemText6"/>
    </Widget>
  </Layout>

  <Animations>
    <Animation name="TopLevelRotation"
               start="true"
               onEnter=""
               steppingTime="@TabScanTime"
               autoStart="true"
               iterations="@RowScanIterations">
      <Widget name="Row1" onSelect="actuate(ItemText1)"/>
      <Widget name="Row2" onSelect="select(ItemText2); transition(ButtonPressed)"/>
      <Widget name="Row3" onSelect="actuate(ItemText3);stop()"/>
      <Widget name="Row4" onSelect="actuate(ItemText4);stop()"/>
      <Widget name="Row5" onSelect="actuate(ItemText5);stop()"/>
      <Widget name="Row6" onSelect="select(ItemText6); transition(ButtonPressed)"/>
    </Animation>

    <Animation name="HighlightNext"
               onEnter="highlightSelected(Row2, true);highlightSelected(Row3, true);highlightSelected(Row4, true);"
               steppingTime="@TabScanTime"
               onEnd="highlight(Row1, false);highlight(Row2, false);highlight(Row3, false);transition(TopLevelRotation)"
               iterations="@HalfScanIterations">
      <Widget name="Row2" onSelect="actuate(ItemText2);highlight(Row1, false);highlight(Row2, false);highlight(Row3, false);stop();" onHighlightOff="highlightSelected(Row2, true)"/>
      <Widget name="Row3" onSelect="actuate(ItemText3);highlight(Row1);highlight(Row2, false);highlight(Row3, false);stop();" onHighlightOff="highlightSelected(Row3, true)"/>
      <Widget name="Row4" onSelect="actuate(ItemText4);highlight(Row1);highlight(Row2, false);highlight(Row3, false);stop();" onHighlightOff="highlightSelected(Row4, true)"/>
    </Animation>

    <Animation name="ButtonPressed"
                onEnter=""
                iterations="1"
                onEnd="transition(TopLevelRotation)">
      <Widget name="@SelectedWidget" hesitateTime="@FirstRepeatTime" onSelect="actuate(@SelectedWidget);transition(ButtonPressed)" />
    </Animation>
  </Animations>
</ACAT>


